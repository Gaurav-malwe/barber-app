{
  "info": {
    "name": "Groomly Prod API",
    "_postman_id": "9b2cfb7f-8f55-4bc7-96d3-3c0d0c0e0d99",
    "description": "Postman collection for production API https://api.groomly.synkrustech.com. Uses cookie-based auth; run Login to set cookies.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://api.groomly.synkrustech.com" },
    { "key": "email", "value": "owner@example.com" },
    { "key": "password", "value": "ChangeMe123!" },
    { "key": "shop_name", "value": "Groomly Main" },
    { "key": "pan", "value": "ABCDE1234F" },
    { "key": "customer_id", "value": "" },
    { "key": "service_id", "value": "" },
    { "key": "invoice_id", "value": "" },
    { "key": "start", "value": "2026-01-01T00:00:00Z" },
    { "key": "end", "value": "2026-02-01T00:00:00Z" },
    { "key": "dormant_days", "value": "30" },
    { "key": "limit", "value": "10" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"shop_name\": \"{{shop_name}}\",\n  \"pan\": \"{{pan}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Cookies are set by the response and stored automatically by Postman."
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Services",
      "item": [
        {
          "name": "List Services",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/services",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"]
            }
          }
        },
        {
          "name": "Create Service",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.id) { pm.collectionVariables.set('service_id', data.id); }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Haircut\",\n  \"price_paise\": 25000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/services",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"]
            }
          }
        },
        {
          "name": "Update Service",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price_paise\": 27000,\n  \"active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/services/{{service_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services", "{{service_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "List Customers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/customers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers"]
            }
          }
        },
        {
          "name": "Create Customer",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.id) { pm.collectionVariables.set('customer_id', data.id); }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Aarav Patel\",\n  \"phone\": \"+919999999999\",\n  \"notes\": \"Prefers weekend appointments\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers"]
            }
          }
        },
        {
          "name": "Get Customer",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/customers/{{customer_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers", "{{customer_id}}"]
            }
          }
        },
        {
          "name": "Update Customer",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"VIP customer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customers/{{customer_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers", "{{customer_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "List Invoices",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/invoices?customer_id={{customer_id}}&start={{start}}&end={{end}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices"],
              "query": [
                { "key": "customer_id", "value": "{{customer_id}}", "disabled": true },
                { "key": "start", "value": "{{start}}" },
                { "key": "end", "value": "{{end}}" }
              ]
            }
          }
        },
        {
          "name": "Create Invoice",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.id) { pm.collectionVariables.set('invoice_id', data.id); }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_id\": \"{{customer_id}}\",\n  \"items\": [\n    {\n      \"service_id\": \"{{service_id}}\",\n      \"qty\": 1\n    }\n  ],\n  \"discount_paise\": 0,\n  \"payment_method\": \"cash\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/invoices",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices"]
            }
          }
        },
        {
          "name": "Get Invoice",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/invoices/{{invoice_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices", "{{invoice_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Customer Insights",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reports/customers?start={{start}}&end={{end}}&dormant_days={{dormant_days}}&include_never=true&limit={{limit}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "customers"],
              "query": [
                { "key": "start", "value": "{{start}}" },
                { "key": "end", "value": "{{end}}" },
                { "key": "dormant_days", "value": "{{dormant_days}}" },
                { "key": "include_never", "value": "true" },
                { "key": "limit", "value": "{{limit}}" }
              ]
            }
          }
        },
        {
          "name": "Service Performance",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reports/services?start={{start}}&end={{end}}&limit={{limit}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "services"],
              "query": [
                { "key": "start", "value": "{{start}}" },
                { "key": "end", "value": "{{end}}" },
                { "key": "limit", "value": "{{limit}}" }
              ]
            }
          }
        }
      ]
    }
  ]
}
